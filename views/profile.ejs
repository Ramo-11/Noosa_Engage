<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Noosa Engage</title>
    <meta name="description" content="Manage your profile information, update your details, and customize your account settings.">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/styles/general.css">
    <link rel="stylesheet" href="/styles/nav.css">
    <link rel="stylesheet" href="/styles/profile.css">
    <link rel="stylesheet" href="/styles/footer.css">
    <link rel="shortcut icon" href="/images/Logo-white.png">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include("./partials/nav.ejs") %>
    
    <main class="main-content">
        <!-- Profile Header -->
        <section class="profile-hero">
            <div class="profile-hero-content">
                <div class="profile-avatar">
                    <img src="/images/default-avatar.png" alt="Profile Picture" class="avatar-image" id="avatarPreview">
                    <div class="avatar-overlay">
                        <i class="fas fa-camera"></i>
                    </div>
                </div>
                <div class="profile-hero-info">
                    <h1 class="profile-name"><%=user?.fullName || 'User Name'%></h1>
                    <p class="profile-email"><%=user?.email || 'user@example.com'%></p>
                    <div class="profile-status">
                        <span class="status-badge active">
                            <i class="fas fa-circle"></i>
                            Active Account
                        </span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Profile Content -->
        <section class="profile-section">
            <div class="profile-container">
                <div class="profile-card">
                    <!-- Card Header -->
                    <div class="profile-card-header">
                        <div class="header-content">
                            <h2 class="card-title">
                                <i class="fas fa-user-edit"></i>
                                Personal Information
                            </h2>
                            <p class="card-subtitle">Manage your account details and preferences</p>
                        </div>
                        <button class="edit-button" id="editButton" onclick="editButtonFunction()">
                            <i class="fas fa-edit"></i>
                            Edit Profile
                        </button>
                    </div>

                    <!-- Alert Message -->
                    <div id="profileAlert" class="profile-alert" style="display: none;">
                        <i class="fas fa-info-circle"></i>
                        <span id="alertMessage"></span>
                    </div>

                    <!-- Profile Form -->
                    <form class="profile-form" id="profileForm" data-custom-submit="true">
                        <div class="form-grid">
                            <!-- Full Name -->
                            <div class="form-group">
                                <label for="fullName" class="form-label">
                                    <i class="fas fa-user"></i>
                                    Full Name
                                </label>
                                <div class="form-input-container">
                                    <input 
                                        type="text" 
                                        id="fullName" 
                                        name="fullName" 
                                        class="form-input" 
                                        value="<%=user?.fullName || ''%>"
                                        readonly
                                        required
                                    >
                                </div>
                                <div class="form-error" id="fullNameError" style="display: none;">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <span></span>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="form-group">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope"></i>
                                    Email Address
                                </label>
                                <div class="form-input-container">
                                    <input 
                                        type="email" 
                                        id="email" 
                                        name="email" 
                                        class="form-input" 
                                        value="<%=user?.email || ''%>"
                                        readonly
                                        required
                                    >
                                </div>
                                <div class="form-error" id="emailError" style="display: none;">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <span></span>
                                </div>
                            </div>

                            <!-- Phone Number -->
                            <div class="form-group">
                                <label for="phoneNumber" class="form-label">
                                    <i class="fas fa-phone"></i>
                                    Phone Number
                                </label>
                                <div class="form-input-container">
                                    <input 
                                        type="tel" 
                                        id="phoneNumber" 
                                        name="phoneNumber" 
                                        class="form-input" 
                                        value="<%=user?.phoneNumber || ''%>"
                                        readonly
                                        placeholder="Enter your phone number"
                                    >
                                </div>
                                <div class="form-error" id="phoneNumberError" style="display: none;">
                                    <i class="fas fa-exclamation-circle"></i>
                                    <span></span>
                                </div>
                            </div>

                            <!-- Profile Picture -->
                            <div class="form-group">
                                <label for="profilePicture" class="form-label">
                                    <i class="fas fa-image"></i>
                                    Profile Picture
                                </label>
                                <div class="file-input-container">
                                    <input 
                                        type="file" 
                                        id="profilePicture" 
                                        name="profilePicture" 
                                        class="file-input" 
                                        accept="image/*"
                                        disabled
                                    >
                                    <label for="profilePicture" class="file-input-label">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span id="fileLabel">Choose profile picture</span>
                                    </label>
                                </div>
                                <div class="form-help">
                                    <small>Supported formats: JPG, PNG, GIF (max 5MB)</small>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-actions" id="formActions" style="display: none;">
                            <button type="button" class="btn-cancel" id="cancelButton" onclick="cancelButtonFunction()">
                                <i class="fas fa-times"></i>
                                Cancel
                            </button>
                            <button type="submit" class="btn-submit" id="submitButton">
                                <span id="buttonText">
                                    <i class="fas fa-save"></i>
                                    Save Changes
                                </span>
                                <div class="spinner" id="buttonSpinner" style="display: none;"></div>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <%- include("./partials/footer.ejs") %>

    <!-- JavaScript -->
    <script src="/js/navigation.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/profile.js"></script>
</body>
</html>