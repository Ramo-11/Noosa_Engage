<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navigation</title>
    <link rel="stylesheet" href="/styles/nav.css">
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container">
            <!-- Logo -->
            <div class="logo-container">
                <a href="/" class="logo-text">
                    <img src="/images/Logo-white.png" alt="Noosa Engage" class="logo-image">
                    Noosa Engage
                </a>
            </div>

            <!-- Desktop Navigation -->
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <i class="fas fa-home"></i>
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/prices" class="nav-link">
                        <i class="fas fa-tag"></i>
                        Pricing
                    </a>
                </li>
                <% if (userLoggedIn) { %>
                    <li class="nav-item">
                        <a href="/schedule" class="nav-link">
                            <i class="fas fa-calendar-plus"></i>
                            Schedule
                        </a>
                    </li>
                <% } %>
                <li class="nav-item">
                    <a href="/staff" class="nav-link">
                        <i class="fas fa-users"></i>
                        Our Team
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/contact" class="nav-link">
                        <i class="fas fa-envelope"></i>
                        Contact
                    </a>
                </li>
            </ul>

            <!-- Auth Section -->
            <% if (userLoggedIn) { %>
                <!-- Profile Dropdown -->
                <div class="profile-container">
                    <div class="profile-trigger">
                        <img src="<%= user.profilePicture || '/images/DefaultProfilePic.jpg' %>" 
                             alt="Profile Picture" 
                             class="profile-image">
                        <div class="profile-info">
                            <span class="profile-name"><%= user.fullName %></span>
                            <% if (isUserAdmin) { %>
                                <span class="profile-role">Admin</span>
                            <% } else { %>
                                <span class="profile-role">Student</span>
                            <% } %>
                        </div>
                        <i class="fas fa-chevron-down dropdown-arrow"></i>
                    </div>
                    
                    <div class="profile-dropdown">
                        <a href="/profile" class="dropdown-item">
                            <i class="fas fa-user dropdown-icon"></i>
                            My Profile
                        </a>
                        <% if (userLoggedIn) { %>
                            <a href="/home" class="dropdown-item">
                                <i class="fas fa-tachometer-alt dropdown-icon"></i>
                                Dashboard
                            </a>
                        <% } %>
                        <% if (isUserAdmin) { %>
                            <div class="dropdown-divider"></div>
                            <a href="/create-invoice" class="dropdown-item">
                                <i class="fas fa-file-invoice dropdown-icon"></i>
                                Create Invoice
                            </a>
                        <% } %>
                        <div class="dropdown-divider"></div>
                        <a href="/logout" class="dropdown-item">
                            <i class="fas fa-sign-out-alt dropdown-icon"></i>
                            Sign Out
                        </a>
                    </div>
                </div>
            <% } else { %>
                <!-- Auth Buttons -->
                <div class="auth-buttons">
                    <a href="/login" class="auth-btn login">
                        <i class="fas fa-sign-in-alt"></i>
                        Sign In
                    </a>
                    <a href="/signup" class="auth-btn signup">
                        <i class="fas fa-user-plus"></i>
                        Sign Up
                    </a>
                </div>
            <% } %>

            <!-- Mobile Menu Toggle -->
            <button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div class="mobile-menu">
            <ul class="mobile-nav-menu">
                <li><a href="/" class="mobile-nav-link">Home</a></li>
                <li><a href="/prices" class="mobile-nav-link">Pricing</a></li>
                <% if (userLoggedIn) { %>
                    <li><a href="/schedule" class="mobile-nav-link">Schedule</a></li>
                    <li><a href="/home" class="mobile-nav-link">Dashboard</a></li>
                    <li><a href="/profile" class="mobile-nav-link">Profile</a></li>
                    <% if (isUserAdmin) { %>
                        <li><a href="/create-invoice" class="mobile-nav-link">Create Invoice</a></li>
                    <% } %>
                <% } %>
                <li><a href="/staff" class="mobile-nav-link">Our Team</a></li>
                <li><a href="/contact" class="mobile-nav-link">Contact</a></li>
            </ul>
            
            <% if (!userLoggedIn) { %>
                <div class="mobile-auth-buttons">
                    <a href="/login" class="mobile-auth-btn login">Sign In</a>
                    <a href="/signup" class="mobile-auth-btn signup">Sign Up</a>
                </div>
            <% } else { %>
                <div class="mobile-auth-buttons">
                    <a href="/logout" class="mobile-auth-btn login">Sign Out</a>
                </div>
            <% } %>
        </div>
    </nav>

    <!-- Add padding to body to account for fixed navbar -->
    <style>
        body {
            padding-top: 80px;
        }
        
        @media (max-width: 480px) {
            body {
                padding-top: 70px;
            }
        }
    </style>
</body>
</html>