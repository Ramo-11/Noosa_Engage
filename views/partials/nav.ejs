<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/styles/nav.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar</title>
</head>
<body>
    <nav class="navbar">
        <div class="navbar-container container">
            <div class="logo-div">
                <a href="/"><img src="/images/Logo-white.png" alt="site logo"></a>
            </div> 
            <input type="checkbox" name="" id="">
            <div class="hamburger-lines">
                <span class="line line1"></span>
                <span class="line line2"></span>
                <span class="line line3"></span>
            </div>
            <ul class="menu-items">
                <li><a href="/">Home</a></li>
                <li><a href="/prices">Our Prices</a></li>
                <li>
                    <a href="<%= userLoggedIn ? '/schedule' : '/login' %>">Schedule</a>
                </li>
                <li><a href="/staff">Staff</a></li>
                <li><a href="/contact">Contact us</a></li>
            </ul>
            <div class="profile-picture-container">
                <% if (userLoggedIn) { %>
                    <% if (user && user.profilePicture && user.profilePicture.data) { %>
                        <img src="data:<%= user.profilePicture.contentType %>;base64,<%= user.profilePicture.data.toString('base64') %>" alt="Profile Picture" class="profile-img" id="profile-pic">
                    <% } else { %>
                        <img src="/images/DefaultProfilePic.jpg" alt="Profile Picture" class="profile-img" id="profile-pic">
                    <% } %> 
                <% } else { %>
                    <img src="/images/DefaultProfilePic.jpg" alt="Profile Picture" class="profile-img" id="profile-pic-guest">
                <% } %>
                
                <div class="dropdown" id="dropdown-menu">
                    <ul>
                        <% if (userLoggedIn) { %>
                            <li><a href="/dashboard">Dashboard</a></li>
                            <li><a href="/logout">Log Out</a></li>
                        <% } else { %>
                            <li><a href="/login">Log In</a></li>
                            <li><a href="/signup">Sign Up</a></li>
                        <% } %>
                    </ul>
                </div>                
            </div>
            
        </div>
    </nav>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Get elements
            const profilePic = document.getElementById('profile-pic') || document.getElementById('profile-pic-guest');
            const dropdownMenu = document.getElementById('dropdown-menu');

            // Toggle dropdown on profile picture click
            profilePic.addEventListener('click', function (event) {
                dropdownMenu.classList.toggle('show'); // Toggle the 'show' class
            });

            // Optional: Hide dropdown when clicking outside of it
            document.addEventListener('click', function (event) {
                if (!profilePic.contains(event.target) && !dropdownMenu.contains(event.target)) {
                    dropdownMenu.classList.remove('show'); // Hide the dropdown if clicked outside
                }
            });
        });
    </script>
</body>
</html>
